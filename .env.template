# MongoDB Environment Variables
# Copy this file to .env and fill in your credentials
# This file should not be committed to version control

# Admin credentials
MONGODB_ADMIN_USER=admin
MONGODB_ADMIN_PASS=your_secure_password_here

# MongoDB configuration
MONGODB_PORT=27017
MONGODB_BIND_IP=0.0.0.0

# Backup configuration
MONGODB_BACKUP_DIR=/tmp/mongodb_backups

# MongoDB restore credentials
MONGODB_RESTORE_USER=user-db
MONGODB_RESTORE_PASS=password-db
MONGODB_RESTORE_DB=db-name

# AWS S3 credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=ap-southeast-1

# S3 bucket configuration
S3_BUCKET=path/to/your/s3/bucket
